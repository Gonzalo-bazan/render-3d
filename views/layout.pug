    script.
      function toggleMenu() {
        var menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
        var toggleButton = document.getElementById('menu-toggle');
        if (menu.classList.contains('hidden')) {
          toggleButton.innerHTML = '☰';
        } else {
          toggleButton.innerHTML = '✕';
        }
      }
